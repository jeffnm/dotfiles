# wpaperd configuration
# Replaces hyprpaper for compositor-agnostic wallpaper management

[DP-1]
path = "~/Pictures/wallpapers/monitor1"
duration = "30m"
sorting = "random"
mode = "fit"

[DP-3]
path = "~/Pictures/wallpapers/monitor2"
duration = "30m"
sorting = "random"
mode = "fit"

